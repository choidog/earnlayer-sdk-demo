# EarnLayer SDK Demo Environment Configuration
# Copy this file to .env and update the values

# ==================================================
# ENVIRONMENT
# ==================================================
VITE_ENV=development

# ==================================================
# AI PROVIDER CONFIGURATION
# ==================================================
# Choose your AI provider: toolhouse, openrouter, openai, anthropic, gemini, custom
VITE_AI_PROVIDER=toolhouse

# Toolhouse Configuration (EarnLayer Backend Integration)
VITE_BACKEND_URL=http://localhost:8000
VITE_TOOLHOUSE_AGENT_ID=bfef4293-eb19-42bf-9f4e-0928d5e82e88
VITE_TOOLHOUSE_API_KEY=your_toolhouse_api_key_here

# OpenRouter Configuration (Direct API)
VITE_OPENROUTER_API_KEY=sk-or-v1-your_openrouter_api_key_here
VITE_OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
VITE_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
VITE_OPENROUTER_TEMPERATURE=0.7
VITE_OPENROUTER_MAX_TOKENS=1000

# OpenAI Configuration (Direct API)
VITE_OPENAI_API_KEY=sk-your_openai_api_key_here
VITE_OPENAI_MODEL=gpt-4
VITE_OPENAI_BASE_URL=https://api.openai.com/v1
VITE_OPENAI_TEMPERATURE=0.7
VITE_OPENAI_MAX_TOKENS=1000

# Anthropic Configuration (Direct API)
VITE_ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
VITE_ANTHROPIC_MODEL=claude-3.5-sonnet-20241022
VITE_ANTHROPIC_BASE_URL=https://api.anthropic.com
VITE_ANTHROPIC_TEMPERATURE=0.7
VITE_ANTHROPIC_MAX_TOKENS=1000

# Gemini Configuration (Direct API)
VITE_GEMINI_API_KEY=your_gemini_api_key_here
VITE_GEMINI_MODEL=gemini-2.5-pro
VITE_GEMINI_TEMPERATURE=0.7
VITE_GEMINI_MAX_TOKENS=1000

# Custom AI Provider Configuration
VITE_CUSTOM_AI_ENDPOINT=https://your-custom-ai-endpoint.com/chat
VITE_CUSTOM_AI_API_KEY=your_custom_api_key_here
VITE_CUSTOM_AI_HEADERS={"X-Custom-Header": "value"}

# ==================================================
# ADVERTISING CONFIGURATION
# ==================================================
VITE_CREATOR_ID=d64a4899-20e4-4ecd-a53e-057aceed54cf
VITE_API_KEY=demo-api-key

# Ad Type Preferences (JSON array or comma-separated)
VITE_DEFAULT_AD_TYPES=["hyperlink", "popup", "banner", "video", "thinking"]
VITE_CONVERSATION_AD_TYPES=["hyperlink", "popup", "banner"]

# Ad Behavior
VITE_AUTO_REQUEST_DISPLAY_ADS=true
VITE_AD_FREQUENCY=normal
VITE_REVENUE_VS_RELEVANCE=0.5

# ==================================================
# CONVERSATION CONFIGURATION  
# ==================================================
VITE_AUTO_INITIALIZE_CONVERSATION=true

# ==================================================
# API CONFIGURATION
# ==================================================
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# ==================================================
# DEVELOPMENT SETTINGS
# ==================================================
# These settings only apply when VITE_ENV=development

# Development shortcuts
VITE_DEV_AUTO_SELECT_PROVIDER=true
VITE_DEV_SHOW_DEBUG_PANEL=true
VITE_DEV_LOG_LEVEL=debug

# ==================================================
# PRODUCTION OVERRIDES
# ==================================================
# These settings override defaults when VITE_ENV=production

# Production Backend URL (if different from development)
# VITE_BACKEND_URL=https://backend-production-1774.up.railway.app

# Production API settings
# VITE_API_TIMEOUT=60000
# VITE_API_RETRY_ATTEMPTS=5
# VITE_API_RETRY_DELAY=2000